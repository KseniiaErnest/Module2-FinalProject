<div class="signup-container">
<h1>Signup</h1>

<form action="/user/signup" method="POST">
<label>
  Username
  <input type="text" name="username" id="" placeholder="Please, fill in preffered username">
</label>

<label>
  Email
  <input type="email" name="email" id="" placeholder="Please, fill in valid email">
</label>

<label>
  Password
  <input type="password" name="password" id="" placeholder="Please, create your password">
</label>

<button type="submit">Create an account</button>

{{#if errorMessage}}
    <p class="error">{{errorMessage}}</p>
  {{/if}}


</form>

</div>